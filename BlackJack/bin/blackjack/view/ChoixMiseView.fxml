<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="blackjack.view.ChoixMiseController">
   <center>
      <VBox fx:id="content" prefHeight="217.0" prefWidth="320.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="350.0" text="Nom du joueur">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="nomJoueurTextField" alignment="CENTER" prefHeight="40.0" text="Joueur X">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="1.0" left="5.0" right="5.0" />
               </VBox.margin>
            </TextField>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="350.0" text="Montant du portefeuille">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="portefeuilleLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="350.0" text="Solde here">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="1.0" />
               </VBox.margin>
            </Label>
            <Slider fx:id="portefeuilleSlider" max="10000.0" min="1.0">
               <cursor>
                  <Cursor fx:constant="H_RESIZE" />
               </cursor>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </Slider>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="350.0" text="Montant de la mise">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="miseLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="350.0" text="Bet here">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="1.0" />
               </VBox.margin>
            </Label>
            <Slider fx:id="miseSlider">
               <cursor>
                  <Cursor fx:constant="H_RESIZE" />
               </cursor>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </VBox.margin>
            </Slider>
         </children>
      </VBox>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#actionValidate" styleClass="buttondefault" text="Valider" />
            <Button mnemonicParsing="false" onAction="#actionCancel" styleClass="buttoncancel" text="Annuler" />
        </buttons>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
